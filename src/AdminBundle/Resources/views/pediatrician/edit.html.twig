{% block body %}


    <div class="row">
        <div class="row">
            <div class="col-md-12">
        {% for type, flashMessages in app.session.flashbag.all() %} 
        {% for flashMessage in flashMessages %}
        <div class="alert alert-{{ type }}">
            {{ flashMessage|raw }}
        </div>
         {% endfor %} 
         {% endfor %} 
    </div>
</div>

        <div class="col-md-6 col-md-offset-3">
    {{ form_start(edit_form) }}

