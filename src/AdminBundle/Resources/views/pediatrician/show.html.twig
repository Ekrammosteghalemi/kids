{% extends '@Admin/base.html.twig' %}
{% block title %}
    {{ parent() }} - pediatrician
{% endblock %}

    {% block pageHeader %}
        <a href="{{ path('pediatre_show', { 'id': pediatrician.id }) }}">Pediatrician</a>
    {% endblock %}
    {% block pageBreadcrumb %}
        <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="">Liste des pediatre</li>
        <li class="active">info pediatre</li>
    {% endblock %}
    {% block link5State %} active {% endblock %}

{% block body %}
<div class="col-md-12">
<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ pediatrician.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Name</strong></p>
        <p>
            {{ pediatrician.name }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Price</strong></p>
        <p>
            {{ pediatrician.price }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('pediatre') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('pediatre_edit', { 'id':  pediatrician.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('pediatre_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('pediatre_delete', { 'id': pediatrician.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>
</div>


{% endblock %}

