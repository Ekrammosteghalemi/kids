{% extends '@Admin/base.html.twig' %}
{% block title %}
    {{ parent() }} - speciality
{% endblock %}

    {% block pageHeader %}
        Edit speciality <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    {% endblock %}
        {% block pageDescription %}

        {% endblock %}
    {% block pageBreadcrumb %}
        <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="">Liste des Specialité</li>
        <li class="active">edition de spécialité</li>
    {% endblock %}
    {% block link5State %} active {% endblock %}
    {% block link6State %} active {% endblock %}
{% block body %}
    <div class="row">
        <div class="row">
            <div class="col-md-12">
                {% for type, flashMessages in app.session.flashbag.all() %}
                    {% for flashMessage in flashMessages %}
                        <div class="alert alert-{{ type }}">
                            {{ flashMessage|raw }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
        <div class="col-md-6 col-md-offset-3">

        {{ form_start(edit_form) }}

        {{ form_widget(edit_form) }}
        <p>
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Update
            </button>
        </p>
        {{ form_end(edit_form) }}

        <hr/>


        <div class="form-group">
            <a class="btn btn-default" href="{{ path('speciality') }}">
                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                Back to list
            </a>
            <a class="btn btn-info" href="{{ path('speciality_new') }}">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                New
            </a>
            <form action="{{ path('speciality_delete', { 'id': speciality.id }) }}" method="post"
                  style="display: inline-block">
                <input type="hidden" name="_method" value="DELETE"/>
                {{ form_widget(delete_form) }}
                <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    Delete
                </button>
            </form>
        </div>

    </div>
    </div>


{% endblock %}

