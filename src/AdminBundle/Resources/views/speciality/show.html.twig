{% extends '@Admin/base.html.twig' %}
{% block title %}
    {{ parent() }} - speciality
{% endblock %}

{% block body %}

    <div id="top" class="row">
        <div class="page-header">
            <h2>View speciality <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <p><strong>Id</strong></p>
            <p>
                {{ speciality.id }}
            </p>

        </div>
        <div class="col-md-6">
            <p><strong>Name</strong></p>
            <p>
                {{ speciality.name }}
            </p>

        </div>
        <div class="col-md-6">
            <p><strong>Description</strong></p>
            <p>
                {{ speciality.description }}
            </p>

        </div>
    </div>

    <hr/>


    <div class="form-group">
        <a class="btn btn-default" href="{{ path('speciality') }}">
            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
            Back to list
        </a>
        <a class="btn btn-primary" href="{{ path('speciality_edit', { 'id':  speciality.id }) }}">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            Edit
        </a>
        <a class="btn btn-info" href="{{ path('speciality_new') }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            New
        </a>
        <form action="{{ path('speciality_delete', { 'id': speciality.id }) }}" method="post"
              style="display: inline-block">
            <input type="hidden" name="_method" value="DELETE"/>
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                Delete
            </button>
        </form>
    </div>


{% endblock %}

