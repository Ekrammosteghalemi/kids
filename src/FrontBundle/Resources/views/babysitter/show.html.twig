{% extends '@Front/base.html.twig' %}

{% block title %}
{{ parent() }} - babySitter
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>View babySitter <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ babySitter.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Name</strong></p>
        <p>
            {{ babySitter.name }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Birthday</strong></p>
        <p>
            {% if babySitter.birthDay %}{{ babySitter.birthDay|date('Y-m-d') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Description</strong></p>
        <p>
            {{ babySitter.description }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Photo</strong></p>
        <p>
            {{ babySitter.photo }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Experience</strong></p>
        <p>
            {{ babySitter.experience }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('babysitter') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('babysitter_edit', { 'id':  babySitter.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('babysitter_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('babysitter_delete', { 'id': babySitter.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>


{% endblock %}

